    <script>
    document.addEventListener('click', function(e){
        const a = e.target.closest('a');
        if(!a) return;
        const href = a.getAttribute('href');
        if(!href) return;
        if(href.startsWith('http') || href.startsWith('mailto:') || href.startsWith('tel:') || href.startsWith('#')) return;
        if(href.startsWith('/')){
            if(!href.startsWith('/user')){
                e.preventDefault();
                alert('Navigation outside the user area is blocked.');
            }
        }
    });
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const myCardsSection = document.getElementById('my-cards-section');

            async function fetchAndRenderCards() {
                try {
                    const response = await fetch('/api/v1/cards/', { credentials: 'include' });
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    const cards = await response.json();
                    
                    myCardsSection.innerHTML = '';

                    if (!cards || cards.length === 0) {
                        myCardsSection.innerHTML = '<div class="col-12 text-center"><h3>No cards found.</h3></div>';
                        return;
                    }

                    cards.forEach(card => {
                        const cardElement = document.createElement('div');
                        cardElement.classList.add('col-lg-4', 'col-md-6', 'wow', 'fadeInUp');
                        cardElement.setAttribute('data-wow-delay', '0.1s');

                        cardElement.innerHTML = `
                            <div class="feature-box border rounded p-4 text-center">
                                <i class="fa fa-credit-card fa-3x text-primary mb-3"></i>
                                <h4 class="mb-3">${card.card_type || 'Unknown'} Card</h4>
                                <p class="mb-2"><strong>Card Number:</strong> **** **** **** ${card.card_number ? card.card_number.slice(-4) : 'N/A'}</p>
                                <p class="mb-2"><strong>Expiry Date:</strong> ${card.expiry_date || 'N/A'}</p>
                                <p class="mb-2"><strong>Status:</strong> ${card.status || 'Active'}</p>
                                <a class="fw-semi-bold" href="#">View Details <i class="fa fa-arrow-right ms-1"></i></a>
                            </div>
                        `;
                        myCardsSection.appendChild(cardElement);
                    });
                } catch (error) {
                    console.error('Error fetching cards:', error);
                    myCardsSection.innerHTML = '<div class="col-12 text-center"><h3>Error loading cards. Please try again later.</h3></div>';
                }
            }

            // Initial fetch
            fetchAndRenderCards();

            // Poll for new cards every 15 seconds
            setInterval(fetchAndRenderCards, 15000);
        });
    </script>
